.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 2em $Bold
	margin-bottom 40px
	
.decor-title
	position relative
	padding-left 30px
	padding-top 6px
	padding-bottom 6px
	&:before
		pseudo()
		position absolute
		left 0
		top 0
		height 100%
		width 10px
		background-color $accent-color
	
.title
	font-family $Bold
	&-h1-size
		font-size 36px
		line-height 38px
	&-h2-size
		font-size 32px
		line-height 34px
	&-h3-size
		font-size 28px
		line-height 32px
		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.dark-bg
	background-color $dark-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	

.content
	color $secondary-text-color
	*
		&:last-child
			margin-bottom 0
		&:first-child
			margin-top 0
			
	h2,h3,h3,h4,h5,h6
		line-height 1
		font-family $PtNarrowBold
		margin 20px 0 30px
		
	strong, b
		font-family $Bold
		
	h2
		font-size 26px
		line-height 29px
		
	h3
		font-size 24px
		line-height 26px
		
	h4
		font-size 22px
		line-height 24px
		
	h5
		font-size 20px
		line-height 22px
	
	h6
		font-size 18px
		line-height 19px
	

	a
		color $accent-color
		border-bottom 1px solid 
		&:hover
			color $text-color

	ul, ol
		li
			display block
			position relative
			margin-bottom 15px
			
			&:last-child
				margin-bottom 0
				
	ul
		li
			&:before
				pseudo()
				width 5px
				height 5px
				border-radius 50%
				margin-right 6px
				background-color $accent-color
				vertical-align middle
				
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				vertical-align middle
				color $accent-color
				font-family $Bold
				
	img
		display block
		width auto
		max-width 100%
		margin 40px auto
		

	p, ul, ol, blockquote
		margin 30px 0
		
	blockquote
		padding 20px
		background-color $blockquote-bg
		
	table
		width 100%
		font 14px $Light
		color $product-text-color
		tr
			background-color $basic-white-color
			&:nth-child(odd)
				background-color #f3f3f3
		td
			width 50%
			vertical-align middle		
			padding 13px 25px
			&:last-child
				font-family $Reg
				color $text-color
		


.page-inner
	padding 30px 0 100px
	&-decor
		background $basic-white-color url('../img/backgrounds/waves-cat.png') bottom right no-repeat
		&-light
			background-color $light-bg
			
.page-title
	margin-bottom 30px
	
.block-title
	font 30px $PtNarrow
	color $alternate-text-color
	line-height 34px
	b, strong, span
		text-transform uppercase
		font-family $PtNarrowBold
		
	a
		color inherit
		&:hover
			color $accent-color
	

.card
	background-color $basic-white-color
	border 2px solid transparent
	transition border-color .17s ease-in-out
	padding 35px 30px
	height 100%
	display flex
	flex-wrap nowrap
	color $card-text-color
	&-content
		padding-left 30px
	&:hover
		border-color $accent-color