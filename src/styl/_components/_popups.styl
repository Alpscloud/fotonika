.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 430px
		background-color $popup-body-bg
		padding 42px 50px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		box-shadow 2px 3px 32.55px 2.45px rgba(1, 1, 1, 0.18)
		text-align left
		
	&__title
		font 30px $PtNarrow
		line-height 34px
		margin-bottom 30px
		color #303030
		
	.btn-close
		position absolute
		top 16px
		right 16px

.popup-thanks
	.popup__title
		margin-bottom 0
		
	img
		width 108px
		display block
		margin-top 42px