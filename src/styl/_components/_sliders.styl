.slider
	&-loader
		position absolute
		fullSize()
		z-index 10
		background-color $basic-white-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none
			
	&-pagination
		text-align center
		.swiper-pagination-bullet
			outline none
			opacity 1
			border-radius 0
			margin-right 13px
			margin-bottom 6.5px
			width 16px
			height 8px
			background transparent
			position relative
			&:before
				pseudo()
				position absolute
				left 0
				top 0
				height 100%
				width 50%
				background-color #a2a2a2
				transition width .17s ease-in-out
			&:last-child
				margin-right 0
			&-active
				&:before
					width 100%
					background-color $accent-color
					
	&-navigation__btn
		display inline-block
		width 36px
		height 36px
		border 1px solid #e2e2e2
		position absolute
		z-index 1
		vertical-center()
		svg
			fill #e2e2e2
			transition fill .17s ease-in-out
			width 16px
			position absolute
		&--prev
			left 30px
			svg
				left 50%
				top 50%
				transform translate(-50%, -50%) rotate(90deg)
		&--next
			right 30px
			
			svg
				left 50%
				top 50%
				transform translate(-50%, -50%) rotate(-90deg)
		&:hover
			border-color $accent-color
			svg
				fill $accent-color
			
.swiper-container
	*
		box-sizing border-box
		
.swiper-slide-shadow-left,
.swiper-slide-shadow-right
	display none !important
		

.promo-slider
	//background-color $basic-white-color
	position relative
	z-index 2
	.slider-pagination
		position absolute
		z-index 2
		horisontal-center()
		bottom 36px
		margin 0
	.swiper-slide
		height auto
		&-active
			.promo-slide
				opacity 1
		

.products-cards-slider
	position relative
	.block-title
		margin-bottom 30px
		
	.swiper-slide
		height auto
		
	.slider-pagination
		margin-top 20px
		display none
		
// product slider
.product-slider
	
	&__main
		order 2
		flex 1
		min-width 0
		.swiper-slide
			height auto
	&__thumbnails
		order 1
		flex none
		width 70px
		margin-right 20px

		.swiper-slide
			height 70px !important
		.swiper-slide-thumb-active
			.product-slide-thumbnail
				border-color $accent-color
				img
					opacity 1
				
.product-slide
	flex-col-center()
	padding 20px
	height 100%
	iframe
		display block
		width 100%
		height 100%
	img
		@extends .content-img
	
	&.is-video
		position relative
		&:before
			pseudo()
			position absolute
			width 40px
			height 40px
			position-center()
			z-index 1
			background url('../img/icons/svg/video.svg') no-repeat / contain
	&-thumbnail
		flex-col-center()
		border 1px solid $nav-sublist-link-bg
		padding 5px
		transition border-color .17s ease-in-out
		width 70px
		height 70px
		img
			@extends .content-img
			transition opacity .17s ease-in-out
			opacity .2
			
			&.product-slide-thumbnail__play
				width 40px
				height 40px
			

