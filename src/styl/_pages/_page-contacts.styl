.contacts-block
	margin-bottom 30px
	background-color $basic-white-color
	display flex
	color $secondary-text-color 
	font 18px $PtNarrow
	line-height 24px
	letter-spacing 0.025em
	a
		color inherit
		&:hover
			color $accent-color
	&__info
		padding 110px 90px
	&__phones
		margin-bottom 33px
	
	&__map
		iframe
			display block
			width 100%
			height 100%
			
	.block-title
		margin-bottom 48px
		

	&:last-child
		margin-bottom 0
		
