// Promo
.promo-slide
	position relative
	height 100%
	min-height 550px
	background rgb(240,240,240)
	background -moz-linear-gradient(0deg, rgba(240,240,240,1) 0%, rgba(122,122,122,1) 35%, rgba(49,49,49,1) 78%, rgba(88,88,88,1) 100%)
	background -webkit-linear-gradient(0deg, rgba(240,240,240,1) 0%, rgba(122,122,122,1) 35%, rgba(49,49,49,1) 78%, rgba(88,88,88,1) 100%)
	background linear-gradient(0deg, rgba(240,240,240,1) 0%, rgba(122,122,122,1) 35%, rgba(49,49,49,1) 78%, rgba(88,88,88,1) 100%)
	flex-col-center()
	padding-top 80px
	padding-bottom 80px
	&:before
		pseudo()
		position absolute
		z-index 1
		fullSize()
		background url('../img/backgrounds/waves.png') top -100px center no-repeat / cover
		opacity .38
	
	&__title
		color $basic-white-color
		font 50px $PtNarrow
		line-height 1.2
		margin-bottom 62px
		b, strong, span
			font-family $PtNarrowBold
	&__row
		padding-left 50px
		padding-right 50px
	&__content
		width 100%
		flex 1
		max-width 510px
	&__img
		width 100%
		flex 1
		max-width 620px
		img
			display block
	
	.container
		position relative
		z-index 2
		
// CAtegories
.sect__categories-cards
	padding 90px 0 80px
	position relative
	
	&:before
		pseudo()
		position absolute
		top 0
		right 0
		background url('../img/backgrounds/waves-cat.png') no-repeat
		width 1920px
		height 1301px
		z-index -1
		
.categories-cards__row
	margin-left -30px
	margin-right -30px
	
.category-card
	&__thumbnail
		display flex
		align-items flex-end
		justify-content flex-start
		height 175px
		margin-bottom 29px
		padding-left 29px
		img
			@extends .content-img
			margin 0
	&__wrapper
		padding-left 30px
		padding-right 30px
		margin-bottom 70px
		
	&__title
		font 30px $PtNarrow
		line-height 34px
		margin-bottom 33px
		a
			color $alternate-text-color
			&:hover
				color $accent-color
				
	ul
		padding 0 30px
		li
			display block
			margin-bottom 15px
			&:last-child
				margin-bottom 0
		a
			border-bottom 1px solid
			color $text-color
			&:hover
				color $accent-color
				
// Brands
.sect__brands-cards
	padding-bottom 100px
	
.brand-card
	background-color #f9f9f9
	padding 50px
	height 100%
	display flex
	flex-direction column
	&__content
		flex 1
		margin-bottom 35px
	&__logo
		margin-bottom 40px
		display flex
		align-items flex-end
		
	img
		flex none
		display block
		width auto
		max-width 330px
	&__title
		font 30px $PtNarrow
		line-height 34px
		margin-bottom 26px
		a
			color $alternate-text-color
			&:hover
				color $accent-color
	&__wrapper
		margin-bottom 30px