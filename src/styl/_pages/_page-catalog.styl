.catalog-card
	padding 0
	color $card-text-color
	&__content
		padding 35px 30px
		width 50%
	&__wrapper
		margin-bottom 30px
		
	&__thumbnail
		width 50%
		flex-col-center()
		padding 30px 0 30px 30px
		img
			@extends .content-img
			
	&__title
		margin-bottom 30px
		a
			color $alternate-text-color
			&:hover
				color $accent-color
		
		
.page-catalog
	padding-bottom 70px
	

.product-card
	background-color $basic-white-color
	color $card-text-color
	height 100%
	border 1px solid #e2e2e2
	transition border-color .17s ease-in-out
	&:hover
		border-color $accent-color
	
	&__content
		padding 0 30px 30px

	&__title
		font-size 24px
		flex 1
		line-height 28px
		margin-bottom 26px
		
	&__thumbnail
		padding 30px
		flex-col-center()
		height 320px
		img
			@extends .content-img
			
	&__wrapper
		margin-bottom 30px